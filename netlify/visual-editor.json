{
  "collections": [
    {
      "name": "pages",
      "label": "Páginas",
      "folder": "content/pages",
      "path": "{{slug}}",
      "url": "/{{slug}}/"
    }
  ]
}
[build]
  command   = "npm run build"
  publish   = "dist"

[context.production.environment]
  NODE_ENV = "production"

[context.deploy-preview]
  command = "npm run build:preview"

# Redirect per l’admin
[[redirects]]
  from   = "/admin/*"
  to     = "/admin/index.html"
  status = 200

# Redirect per Netlify Identity
[[redirects]]
  from   = "/.netlify/identity/*"
  to     = "/.netlify/identity/:splat"
  status = 200
